        Button:
            text: "Back"
		    size_hint: (.1, .1)
            pos_hint: {'x':.05, 'y':.05}
            color: 0, 0, 0, 1
            background_normal: 'top.png'
            background_down: 'down.png'
            border: 30,30,30,30
