<SecondThreeDataWindow>:
    name:"SecondThreeData"
    size: root.width, root.height
    color: 0, 0, 0, 1
    ScrollView:
        id: srlv
        size_hint:(0.8, 0.75)
        pos_hint:{'center_x':0.5, 'y':0.2}
        bar_width: 10
        bar_color: 1, 0, 0, 1   # red
        bar_inactive_color: 0, 0, 1, 1   # blue
        effect_cls: "ScrollEffect"

        TextInput:
            do_scroll_x: False
            do_scroll_y: True
            id: show_whois_text
            disabled: True
            halign: "center"
            multiline: True
        
    
    

    Button:
        text: "Back"
		size_hint: (.1, .1)
        pos_hint: {'x':.05, 'y':.05}
        color: 0, 0, 0, 1
        background_normal: 'top.png'
        background_down: 'down.png'
        border: 30,30,30,30
        on_press:
            root.manager.current = 'SecondThree'
            root.go_Second_three()

    Button:
        text: "Show"
		size_hint: (.1, .1)
        pos_hint: {'x':.85, 'y':.05}
        color: 0, 0, 0, 1
        background_normal: 'top.png'
        background_down: 'down.png'
        border: 30,30,30,30
        on_press:
            root.whoshow()
        